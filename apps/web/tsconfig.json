{
    "extends":  [
                    "../../packages/tsconfig/base.json"
                ],
    "compilerOptions":  {
                            "lib":  [
                                        "dom",
                                        "dom.iterable",
                                        "esnext"
                                    ],
                            "allowJs":  true,
                            "noEmit":  true,
                            "incremental":  true,
                            "esModuleInterop":  true,
                            "isolatedModules":  true,
                            "jsx":  "preserve",
                            "plugins":  [
                                            {
                                                "name":  "next"
                                            }
                                        ],
                            "baseUrl":  ".",
                            "paths":  {
                                          "@/*":  [
                                                      "./*"
                                                  ]
                                      }
                        },
    "include":  [
                    "next-env.d.ts",
                    ".next/types/**/*.ts",
                    "**/*.ts",
                    "**/*.tsx"
                ],
    "exclude":  [
                    "node_modules"
                ]
}
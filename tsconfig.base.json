{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nexum/core/*": ["packages/core/*"],
      "@nexum/ui/*": ["packages/ui/*"],
      "@nexum/db/*": ["packages/db/*"]
    }
  }
}
